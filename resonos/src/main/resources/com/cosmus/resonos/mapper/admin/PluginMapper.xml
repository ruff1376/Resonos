<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cosmus.resonos.mapper.admin.PluginMapper">

  <resultMap id="PluginResultMap" type="com.cosmus.resonos.domain.admin.Plugin">
    <id property="id" column="id"/>
    <result property="name" column="name"/>
    <result property="enabled" column="enabled"/>
    <result property="configJson" column="config_json"/>
    <result property="createdAt" column="created_at"/>
  </resultMap>

  <select id="list" resultMap="PluginResultMap">
    SELECT * FROM plugin ORDER BY created_at DESC
  </select>

  <select id="select" resultMap="PluginResultMap">
    SELECT * FROM plugin WHERE id = #{id}
  </select>

  <insert id="insert">
    INSERT INTO plugin (id, name, config_json)
    VALUES (#{id}, #{name}, #{configJson})
  </insert>

  <update id="update">
    UPDATE plugin
    SET name = #{name},
        enabled = NOT enabled,
        config_json = #{configJson}
    WHERE id = #{id}
  </update>

  <delete id="delete">
    DELETE FROM plugin WHERE id = #{id}
  </delete>

</mapper>
